# Service configuration
APP_NAME=pingo-chatbot
APP_ENV=development
LOG_LEVEL=INFO

# API configuration
API_HOST=0.0.0.0
API_PORT=8001
# Comma-separated list of allowed CORS origins for security
# Development: http://localhost:3000
# Production: https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000

# Storage paths
UPLOAD_DIR=./data/uploads
PROCESSED_DIR=./data/processed
CHUNKS_DIR=./data/chunks

# Qdrant configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=documents

# PostgreSQL configuration
DATABASE_URL=postgresql://pingo:pingo@localhost:5432/pingo
POSTGRES_USER=pingo
POSTGRES_PASSWORD=pingo
POSTGRES_DB=pingo

# Redis configuration (for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Authentication
# IMPORTANT: Generate a secure SECRET_KEY (minimum 32 characters)
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Never commit your actual SECRET_KEY to version control!
SECRET_KEY=REPLACE_THIS_WITH_A_SECURE_KEY_MINIMUM_32_CHARS
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# OpenAI API
# REQUIRED: Get your API key from https://platform.openai.com/api-keys
# The application will not start without a valid OPENAI_API_KEY
OPENAI_API_KEY=sk-your-actual-openai-key-here

# Sentry Error Tracking (OPTIONAL)
# Get your DSN from https://sentry.io after creating a project
# Leave empty to disable Sentry
SENTRY_DSN=

# Model configurations
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o-mini

# Chunking configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Retrieval configuration
RETRIEVAL_TOP_K=20
FINAL_TOP_K=5

# Processing configuration
MAX_WORKERS=4
